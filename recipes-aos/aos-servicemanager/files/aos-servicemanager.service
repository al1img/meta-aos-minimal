[Unit]
Description=AOS Service Manager
Wants=network-online.target aos-vis.service aos-iamanager.service
After=network-online.target aos-vis.service aos-iamanager.service
PartOf=aos.target

[Service]
ExecStart=/usr/bin/aos_servicemanager -c /etc/aos/aos_servicemanager.cfg
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
